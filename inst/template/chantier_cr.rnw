  filter(tolower(CLASSE) == "acteur exe") %>% 
  select(LOT, DESIGNATION, NOM, REPRESENTANT, TEL, MOBILE, FAX, EMAIL, P, DIF, C, ABS)

bastiR::print_table(exe, 
            header = header$exe,
            col_format = col_format$exe, 
            rowcol_head = rowcol_head,
            hline = hline,
            grid_col = grid_col)
@
