  filter(tolower(CLASSE) == "acteur orga", tolower(CLE) != "all") %>% 
  select(DESIGNATION, NOM, REPRESENTANT, TEL, MOBILE, FAX, EMAIL, P, DIF, C, ABS)

bastiR::print_table(orga, 
            header = header$orga,
            col_format = col_format$orga, 
            rowcol_head = rowcol_head,
            hline = hline,
            grid_col = grid_col,
            vspace_after = "-.68cm")
@

<<tab_exe>>=
